style {
  .custom-button {
    background: none;
    border: 1px solid var(--secondary);
    color: var(--secondary);
    padding: 10px 35px;
    text-transform: uppercase;
    font-family: "Roboto Condensed";
    cursor: pointer;
    height: 40px;

    &:hover {
      background: var(--secondary);
      color: black;
    }
  }
}

class {
  handleClick() {
    this.emit('click');
  }
}

<button.custom-button class=input.class on-click('handleClick')>
  <${input.renderBody}/>
</button>
